<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ced8e1"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SensorProxActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="SENSOR TEST PROXIMITY"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proxymity sensor adalah sensor yang digunakan untuk mendeteksi keberadaan suatu object tanpa kontak fisik"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manfaat dari proximity sensor salah satunya adalah mematikan layar secara otomatis saat kita menelpon."
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="#6d1b88c2"
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Jarak"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : Dekatkan objek pada area kamera depan."
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>