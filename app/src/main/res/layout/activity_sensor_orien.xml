<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ced8e1"
    android:orientation="vertical"
    tools:context=".SensorOrientationActivity"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="SENSOR TEST ORIENTATION"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orientation Sensor adalah sensor perangkat berasal dari sensor percepatan 3-axis. "
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda dapat memperoleh matriks kecenderungan dan rotasi matriks untuk perangkat dengan menggunakan sensor gravitasi dan sensor medan geomagnetik dalam hubungannya dengan metode get Rotation Matrix, sehingga Anda akan memperoleh letak posisi perangkat."
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>

    <co.kyozen.testsensor.sensorOrientation.AttitudeIndicator
        android:id="@+id/attitude_indicator"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

</LinearLayout>
