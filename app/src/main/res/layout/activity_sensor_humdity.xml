<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ced8e1"
    android:padding="20dp"
    tools:context=".SensorHumdityActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="SENSOR TEST HUMDITY"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity Sensor adalah sensor yang berguna untuk mengukur ambient relatif kelembaban dalam persen (%).Implementasi dan manfaat dari sensor humidity biasa berkaitan dengan sensor temperature untuk menghitung tingkat kelembaban dimana Anda berada."
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67bdcc"
        android:textAlignment="center"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="18dp"
            android:text="xValue :"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>